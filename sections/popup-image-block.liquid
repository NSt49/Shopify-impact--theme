{% comment %}
Section personnalisée Shopify : Texte + lien cliquable ouvrant une image responsive dans une popup
Compatibilité totale mobile + desktop. Thème Impact.
{% endcomment %}

<div class="custom-popup-section" style="
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.padding }}px;
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
  border-radius: {{ section.settings.border_radius }}px;
  --font-size-title: {{ section.settings.font_size_title }}px;
  --font-size-link: {{ section.settings.font_size_link }}px;
">
  <p style="font-size: var(--font-size-title); margin: 0;">
    {{ section.settings.text }}
  </p>
  <p style="font-size: var(--font-size-link); margin: 8px 0 0;">
    <a href="#" class="open-popup-link" style="text-decoration: underline;">
      {{ section.settings.link_text }}
    </a>
  </p>

  <!-- Popup -->
  <div class="popup-overlay" style="display: none;">
    <div class="popup-content">
      <button class="popup-close" aria-label="Fermer">&times;</button>
      <img src="{{ section.settings.popup_image | image_url: width: 1200 }}" alt="Popup Image" />
    </div>
  </div>
</div>


<style>
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.65);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
}

.popup-content {
  position: relative;
  max-width: 90vw;
  max-height: 90vh;
  border-radius: 12px;
  overflow: hidden;
  background: white;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
}

.popup-content img {
  display: block;
  max-width: 100%;
  max-height: 100%;
  border-radius: 12px;
}

.popup-close {
  position: absolute;
  top: 10px;
  right: 14px;
  background: none;
  border: none;
  font-size: 2rem;
  color: white;
  cursor: pointer;
  z-index: 1001;
}
</style>


{% schema %}
{
  "name": "Popup image cliquable",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text_line_1",
      "label": "Texte non cliquable",
      "default": "Voici une phrase descriptive"
    },
    {
      "type": "text",
      "id": "text_line_2",
      "label": "Texte cliquable (ouvre l’image)",
      "default": "Cliquez ici pour afficher l’image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image à afficher"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Couleur du texte cliquable",
      "default": "#007acc"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond du cadre",
      "default": "#f8f8f8"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Arrondi des bords (px)",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 12
    },
    {
  "type": "range",
  "id": "padding",
  "label": "Espacement intérieur (px)",
  "min": 0,
  "max": 60,
  "step": 1,
  "default": 20
},
    {
  "type": "range",
  "id": "font_size_title",
  "label": "Taille du texte (ligne 1)",
  "min": 12,
  "max": 30,
  "step": 1,
  "default": 18
},
{
  "type": "range",
  "id": "font_size_link",
  "label": "Taille du texte cliquable (ligne 2)",
  "min": 12,
  "max": 30,
  "step": 1,
  "default": 16
},
{
  "type": "range",
  "id": "margin_top",
  "label": "Marge au-dessus de la section (px)",
  "min": 0,
  "max": 100,
  "step": 5,
  "default": 20
},
{
  "type": "range",
  "id": "margin_bottom",
  "label": "Marge en dessous de la section (px)",
  "min": 0,
  "max": 100,
  "step": 5,
  "default": 20
}

  ],
  "presets": [
    {
      "name": "Bloc avec image popup",
      "category": "Personnalisé"
    }
  ]
}
{% endschema %}
<script>
document.addEventListener('DOMContentLoaded', function () {
  const trigger = document.querySelector('.open-popup-link');
  const popup = document.querySelector('.popup-overlay');
  const closeBtn = document.querySelector('.popup-close');

  if (trigger && popup && closeBtn) {
    trigger.addEventListener('click', function (e) {
      e.preventDefault();
      popup.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    });

    closeBtn.addEventListener('click', function () {
      popup.style.display = 'none';
      document.body.style.overflow = '';
    });

    popup.addEventListener('click', function (e) {
      if (e.target === popup) {
        popup.style.display = 'none';
        document.body.style.overflow = '';
      }
    });
  }
});
</script>