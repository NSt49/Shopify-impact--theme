{% comment %}
Section Shopify personnalisée : Texte + lien cliquable ouvrant une image en lightbox
Compatible avec le thème Impact – version finale optimisée
{% endcomment %}

<div 
  class="custom-popup-section" 
  style="
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.padding }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    --font-size-title: {{ section.settings.font_size_title }}px;
    --font-size-link: {{ section.settings.font_size_link }}px;
  ">

  <p class="popup-title-text">{{ section.settings.text_line_1 }}</p>

  <button 
    class="popup-link-text" 
    onclick="document.getElementById('popup-image-{{ section.id }}').showModal();" 
    style="color: {{ section.settings.link_color }};">
    {{ section.settings.text_line_2 }}
  </button>

  <dialog id="popup-image-{{ section.id }}" class="popup-dialog" aria-label="Image agrandie">
    <div class="popup-inner">
      <button class="popup-close" onclick="document.getElementById('popup-image-{{ section.id }}').close();">×</button>
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1800 }}" alt="Image popup" loading="lazy" class="popup-image" />
      {% else %}
        <p>Aucune image sélectionnée</p>
      {% endif %}
    </div>
  </dialog>
</div>

<style>
.custom-popup-section {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
  box-shadow: none !important;
  border: none !important;
}

.custom-popup-section * {
  margin: 0 !important;
  padding: 0 !important;
  border: none !important;
  box-shadow: none !important;
}

.popup-title-text {
  font-size: var(--font-size-title);
  font-weight: bold;
  margin-bottom: 0.3rem;
}

.popup-link-text {
  font-size: var(--font-size-link);
  cursor: pointer;
  background: none;
  border: none;
  text-decoration: underline;
  padding: 0;
}

.popup-link-text:hover {
  opacity: 0.8;
}

.popup-dialog {
  width: 100%;
  max-width: 100%;
  border: none !important;
  background: transparent !important;
  padding: 0;
  margin: 0;
}

.popup-inner {
  background: transparent !important;
  padding: 0 !important;
  position: relative;
  text-align: center;
  display: inline-block;
}

.popup-image {
  max-width: 90vw;
  max-height: 90vh;
  width: auto;
  height: auto;
  display: block;
  margin: 0 auto;
}

.popup-close {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  background: none;
  border: none;
  font-size: 2rem;
  color: #000;
  cursor: pointer;
  z-index: 10;
  line-height: 1;
}

.popup-close:hover {
  color: #888;
}

@media (max-width: 768px) {
  .popup-title-text {
    font-size: 1rem;
  }
  .popup-link-text {
    font-size: 0.95rem;
  }
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const dialog = document.getElementById("popup-image-{{ section.id }}");

    dialog?.addEventListener("click", function (event) {
      if (!event.target.closest(".popup-inner")) {
        dialog.close();
      }
    });
  });
</script>

{% schema %}
{
  "name": "Popup image cliquable",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text_line_1",
      "label": "Texte non cliquable",
      "default": "Voici une phrase descriptive"
    },
    {
      "type": "text",
      "id": "text_line_2",
      "label": "Texte cliquable (ouvre l’image)",
      "default": "Cliquez ici pour afficher l’image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image à afficher"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Couleur du texte cliquable",
      "default": "#007acc"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond du cadre",
      "default": "#f8f8f8"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Arrondi des bords (px)",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 12
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Espacement intérieur (px)",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "font_size_title",
      "label": "Taille du texte (ligne 1)",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "font_size_link",
      "label": "Taille du texte cliquable (ligne 2)",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Marge au-dessus de la section (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Marge en dessous de la section (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Bloc avec image popup",
      "category": "Personnalisé"
    }
  ]
}
{% endschema %}
