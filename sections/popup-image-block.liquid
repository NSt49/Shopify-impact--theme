{% schema %}
{
  "name": "Popup image + lien",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Texte principal",
      "default": "Texte informatif"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Texte du lien",
      "default": "Voir l’image"
    },
    {
      "type": "image_picker",
      "id": "popup_image",
      "label": "Image à afficher dans la popup"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size_title",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Taille du texte principal",
      "default": 20
    },
    {
      "type": "range",
      "id": "font_size_link",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Taille du texte du lien",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Padding interne",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Marge au-dessus",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Marge en dessous",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Arrondi des coins",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Texte + Image popup"
    }
  ]
}
{% endschema %}


<script>
document.addEventListener('DOMContentLoaded', function () {
  const trigger = document.querySelector('.open-popup-link');
  const popup = document.querySelector('.popup-overlay');
  const closeBtn = document.querySelector('.popup-close');

  if (trigger && popup && closeBtn) {
    trigger.addEventListener('click', function (e) {
      e.preventDefault();
      popup.classList.add('active');
      document.body.style.overflow = 'hidden';
    });

    closeBtn.addEventListener('click', function () {
      popup.classList.remove('active');
      document.body.style.overflow = '';
    });

    popup.addEventListener('click', function (e) {
      if (e.target === popup) {
        popup.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  }
});
</script>
