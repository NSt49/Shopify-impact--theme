{% comment %}
Section personnalisée avec popup image compatible mobile
{% endcomment %}

<div 
  class="custom-popup-section" 
  style="
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.padding | default: 0 }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    --font-size-title: {{ section.settings.font_size_title }}px;
    --font-size-link: {{ section.settings.font_size_link }}px;
  ">

  <p class="popup-title-text">{{ section.settings.text_line_1 }}</p>

  <button 
    class="popup-link-text" 
    onclick="document.getElementById('modal-{{ section.id }}').classList.add('show');"
    style="color: {{ section.settings.link_color }};">
    {{ section.settings.text_line_2 }}
  </button>

  <div id="modal-{{ section.id }}" class="custom-modal">
    <div class="custom-modal-overlay" onclick="closeModal('{{ section.id }}')"></div>
    <div class="custom-modal-content">
      <button class="custom-modal-close" onclick="closeModal('{{ section.id }}')">×</button>
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1800 }}" alt="Image popup" loading="lazy" class="popup-image" />
      {% else %}
        <p>Aucune image sélectionnée</p>
      {% endif %}
    </div>
  </div>
</div>

<style>
.custom-popup-section {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
  box-shadow: none;
  padding: 0 !important;
}
.popup-title-text {
  font-size: var(--font-size-title);
  font-weight: bold;
  margin-bottom: 0.5rem;
}
.popup-link-text {
  font-size: var(--font-size-link);
  cursor: pointer;
  background: none;
  border: none;
  text-decoration: underline;
  padding: 0;
}
.popup-link-text:hover {
  opacity: 0.8;
}

/* Modal */
.custom-modal {
  position: fixed;
  z-index: 10000;
  top: 0; left: 0;
  width: 100vw;
  height: 100vh;
  display: none;
}
.custom-modal.show {
  display: block;
}
.custom-modal-overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.custom-modal-content {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: transparent;
  max-width: 95vw;
  max-height: 95vh;
  padding: 0;
}
.popup-image {
  max-width: 90vw;
  max-height: 90vh;
  width: auto;
  height: auto;
  display: block;
  margin: 0 auto;
  border: none;
}
.custom-modal-close {
  position: absolute;
  top: 0.5rem;
  right: 1.2rem;
  background: none;
  border: none;
  font-size: 2rem;
  color: #000;
  cursor: pointer;
  z-index: 10;
}
.custom-modal-close:hover {
  color: #ccc;
}

@media (max-width: 768px) {
  .popup-title-text {
    font-size: 1rem;
  }
  .popup-link-text {
    font-size: 0.95rem;
  }
}
  .custom-popup-section * {
  margin-top: 0 !important;
  margin-bottom: 0 !important;
  padding-top: 0 !important;
  padding-bottom: 0 !important;
}
.custom-popup-section {
  border: none !important;
}

.popup-image {
  border: none !important;
  border-radius: 0 !important;
}

</style>

<script>
  function closeModal(id) {
    const modal = document.getElementById("modal-" + id);
    if (modal) modal.classList.remove("show");
  }
</script>

{% schema %}
{
  "name": "Popup image cliquable",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text_line_1",
      "label": "Texte non cliquable",
      "default": "Voici une phrase descriptive"
    },
    {
      "type": "text",
      "id": "text_line_2",
      "label": "Texte cliquable (ouvre l’image)",
      "default": "Cliquez ici pour afficher l’image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image à afficher"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Couleur du texte cliquable",
      "default": "#007acc"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond du cadre",
      "default": "#f8f8f8"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Arrondi des bords (px)",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 12
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Espacement intérieur (px)",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "font_size_title",
      "label": "Taille du texte (ligne 1)",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "font_size_link",
      "label": "Taille du texte cliquable (ligne 2)",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Marge au-dessus de la section (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Marge en dessous de la section (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Bloc avec image popup",
      "category": "Personnalisé"
    }
  ]
}
{% endschema %}
